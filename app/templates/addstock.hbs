<h3 class="text-center hidden-print">Add Stock</h3>
{{#if errorMessage}}
  <div class="alert alert-danger hidden-print">
    {{errorMessage}}
  </div>
{{/if}}
<table class="table">
  <thead>
    <tr>
      <th> S.No </th>
      <th> SKU </th>
      <th> Name </th>
      <th> Sales Rate </th>
      <th> Purchase Rate </th>
      <th> Quantity </th>
      <th>  </th>
    </tr>
  </thead>
  <tbody>
    {{#each items as |result index|}}
      <tr>
        <td> {{get-index index}} </td>
        <td> {{result.SKU}} </td>
        <td> {{get result "Item Name"}} </td>
        <td> {{result.Rate}} </td>
        <td> {{get result "Purchase Rate"}} </td>
        <td> {{get result "Initial Stock"}} </td>
        <td {{action "removeLineItem" result}}><button type="button" class="btn btn-danger pull-right">Delete</button></td>
      </tr>
    {{/each}}
    <tr>
      <td></td>
      <td><Input class="form-control" @value={{id}} @enter="itemChanged" @autofocus={{true}} /></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>
<div class="btn-toolbar">
  <div class="btn-group">
    <button type="button" disabled={{isSaving}} {{action "save"}} class="btn btn-primary">Save</button>
  </div>
</div>