<h3 class="text-center hidden-print">Transfer Stock</h3>

{{#if this.errorMessage}}
  <div class="alert alert-danger hidden-print">
    {{this.errorMessage}}
  </div>
{{/if}}

<table class="table">
  <thead>
    <tr>
      <th>S.No</th>
      <th>SKU</th>
      <th>Name</th>
      <th>Sales Rate</th>
      <th>Purchase Rate</th>
      <th>Quantity</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each this.items as |result index|}}
      <tr>
        <td>{{get-index index}}</td>
        <td>{{result.SKU}}</td>
        <td>{{result.[Item Name]}}</td>
        <td>{{result.Rate}}</td>
        <td>{{result.[Purchase Rate]}}</td>
        <td>
          <Input 
            class="form-control"
            @value={{result.[Initial Stock]}}
            @focusOut={{this.computeTotal}}
          />
        </td>
        <td>
          <button 
            type="button" 
            class="btn btn-danger pull-right"
            {{on "click" (fn this.removeLineItem result)}}
          >
            Delete
          </button>
        </td>
      </tr>
    {{/each}}
    <tr>
      <td colspan="5" align="center">Total</td>
      <td>{{this.total}}</td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td>
        <Input 
          class="form-control"
          @value={{this.id}}
          @enter={{this.itemChanged}}
          @autofocus={{true}}
        />
      </td>
      <td colspan="5"></td>
    </tr>
  </tbody>
</table>

<div class="btn-toolbar">
  <div class="btn-group">
    <button 
      type="button" 
      disabled={{this.isSaving}}
      {{on "click" this.save}}
      class="btn btn-primary"
    >
      Save
    </button>
  </div>
</div>