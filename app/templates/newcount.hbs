<h3>
  {{if @model.isNew "New Counting" "Edit Counting"}}
  -
  {{@model.count_id}}
</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>S.No</th>
      <th>SKU</th>
      <th>Item Name</th>
      <th>Cost Price</th>
      <th>Cost Value</th>
      <th>Sales Price</th>
      <th>Sales Value</th>
      <th>Quantity</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each @model.items as |item index|}}
      <tr>
        <td>{{get-index index}}</td>
        <td>{{item.sku}}</td>
        <td>{{item.description}}</td>
        <td>{{item.cost_price}}</td>
        <td>{{format-currency item.cost_value}}</td>
        <td>{{item.sales_price}}</td>
        <td>{{format-currency item.sales_value}}</td>
        <td>
          <Input 
            class="form-control" 
            @value={{item.qty}} 
          />
        </td>
        <td>
          <button
            type="button"
            {{on "click" (fn this.deleteItem item)}}
            class="btn btn-danger"
          >
            Delete
          </button>
        </td>
      </tr>
    {{/each}}
    <tr>
      <td></td>
      <td>
        <Input
          class="form-control"
          @value={{this.id}}
          @enter={{this.itemChanged}}
          {{autofocus}}
        />
      </td>
      <td colspan="7"></td>
    </tr>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3" class="text-center">Total</td>
      <td colspan="2">{{format-currency @model.totalCV}}</td>
      <td colspan="2">{{format-currency @model.totalSV}}</td>
      <td>{{@model.totalQty}}</td>
      <td></td>
    </tr>
  </tfoot>
</table>

<div class="btn-toolbar pull-right">
  <div class="btn-group">
    <button
      type="button"
      disabled={{@model.isSaving}}
      {{on "click" this.save}}
      class="btn btn-primary"
    >
      Save
    </button>
  </div>
  <div class="btn-group">
    <button
      type="button"
      {{on "click" this.cancel}}
      class="btn btn-default"
    >
      Cancel
    </button>
  </div>
  {{#unless @model.isNew}}
    <div class="btn-group">
      <button
        type="button"
        {{on "click" this.delete}}
        class="btn btn-danger"
      >
        Delete Counting
      </button>
    </div>
  {{/unless}}
</div>