<form style="margin: 20px">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>S.No</th>
      <th>Invoice No</th>
      <th>Discount</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |invoice index|}}
    <tr>
      <td>{{get-index index}}</td>
      <td>{{invoice.invoice_number}}</td>
      <td>{{input type="text" class="form-control" value=invoice.discount autofocus=invoice.autofocus}}</td>
      <td>{{invoice.balance}}</td>
    </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td colspan="2" class="text-right">Total</td>
      <td>{{total}}</td>
    </tr>
    <tr>
      <td colspan="2" class="text-right">Discount</td>
      <td>{{discount}}</td>
    </tr>
    <tr>
      <td colspan="2" class="text-right">Received</td>
      <td>{{input class="form-control" value=received}}</td>
    </tr>
    <tr>
      <td colspan="2" class="text-right">Balance</td>
      <td>{{balance}}</td>
    </tr>
  </tfoot>
</table>
<button class="btn btn-default pull-right" {{action "goToList"}} type="button">Cancel</button>
<button class="btn btn-primary pull-right" {{action "saveAndRecordPayment"}}>Record</button>
</form>
