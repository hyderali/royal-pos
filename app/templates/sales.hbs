<h3 class="text-center hidden-print" data-test-sales-title>Sales</h3>
{{#if this.errorMessage}}
  <div class="alert alert-danger hidden-print" data-test-error-message>
    {{this.errorMessage}}
  </div>
{{/if}}
<SalesTable @model={{this.model}} @addNewItem={{this.addNewItemC}} @addTempItem={{this.addTempItemC}} @removeLineItem={{this.removeLineItemC}} @saveAndPrint={{this.saveAndPrintC}} @newSale={{this.newSaleC}}/>
<SalesReceipt @model={{this.model}} />