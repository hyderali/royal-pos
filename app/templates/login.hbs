<div class="container" style="margin-top: 200px;max-width: 400px;">
  <form>
    {{#if model.error}}
      <div class="alert alert-danger">
        <p>{{model.error}}</p>
      </div>
    {{/if}}
    <div class="form-group">
      <label class="control-label">
        User Name
      </label>
      <Input class="form-control" @value={{model.username}} @autofocus={{true}} />
    </div>
    <div class="form-group">
      <label class="control-label">
        Password
      </label>
      <Input @type="password" class="form-control" @value={{model.password}} />
    </div>
    <div class="btn-toolbar">
      <button class="btn btn-primary" type="submit" {{action "login"}}>Enter</button>
    </div>
  </form>
</div>
