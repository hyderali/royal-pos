<div class="container" style="margin-top: 200px;max-width: 400px;">
  <form>
    {{#if this.model.error}}
      <div class="alert alert-danger">
        <p>{{this.model.error}}</p>
      </div>
    {{/if}}
    <div class="form-group">
      <label class="control-label">
        User Name
      </label>
      <Input class="form-control" @value={{this.model.username}} {{autofocus}} />
    </div>
    <div class="form-group">
      <label class="control-label">
        Password
      </label>
      <Input @type="password" class="form-control" @value={{this.model.password}} />
    </div>
    <div class="btn-toolbar">
      <button class="btn btn-primary" type="submit" {{on "click" this.loginC}}>Enter</button>
    </div>
  </form>
</div>
