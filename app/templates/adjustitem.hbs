<div class="btn btn-toolbar hidden-print" style="margin-top:30px">
  <button {{action 'print'}} class="btn btn-primary">Print</button>
</div>
<table class="table hidden-print">
  <thead>
    <tr>
      <th> Item Code </th>
      <th> Item Name </th>
      <th> Old Price </th>
      <th> New Price </th>
      <th> Quantity </th>
      <th style="width:9%"> </th>
    </tr>
  </thead>
  <tbody>
    {{#each items as |item|}}
      <tr>
        <td>{{item.SKU}}</td>
        <td>{{item.Description}}</td>
        <td>{{item.Rate}}</td>
        <td>{{input value=item.printRate class="form-control" autofocus=true}}</td>
        <td>{{input value=item.qty class="form-control"}}</td>
        <td {{action "removeLineItem" item}}><button type="button" class="btn btn-danger pull-right">Delete</button></td>
      </tr>
    {{/each}}
    <tr>
      <td> {{input class="form-control" autofocus=true enter="addNewItem"}}</td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>
{{barcode-list items=printitems}}
{{#if isShowingModal}}
  {{#modal-dialog close='toggleTranslucent' translucentOverlay=true}}
    <div class="hidden-print">
      <h1>Prices Not Updated</h1>
      <p>The following's items prices are not updated</p>
      <table class="table">
        <thead>
          <tr>
            <th>SKU </th>
            <th>Reason</th>
          </tr>
        </thead>
        <tbody>
          {{#each failedItems as |item|}}
            <tr>
              <th>{{item.error.sku}} </th>
              <th>{{item.error.message}}</th>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <button {{action 'toggleTranslucent'}} class="btn btn-primary">Close</button>
    </div>
  {{/modal-dialog}}
{{/if}}
